/**index.wxss**/
.container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.search-box {
  display: flex;
  margin-bottom: 30rpx;
  width: 100%;
}

.search-box input {
  flex: 1;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.search-btn {
  margin-left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 30rpx;
}

.loading, .error, .no-result {
  text-align: center;
  margin-top: 100rpx;
  color: #999;
}

.error {
  color: #f56c6c;
}

.result-list {
  height: calc(100vh - 200rpx);
}

.cy-item {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cy-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.cy-spell {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.cy-content {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 详情弹窗样式 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-height: 70vh;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
  max-height: calc(70vh - 100rpx);
  overflow-y: auto;
}

.detail-item {
  margin-bottom: 20rpx;
}

.detail-label {
  font-weight: bold;
  color: #333;
}